@model QuizGame.ViewModels.SignupModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h4 class="text-center mb-4">Register</h4>

                    <form asp-action="Register" method="post" autocomplete="off">
                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" autocomplete="new-name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SEmail" class="form-label"></label>
                            <input asp-for="SEmail" class="form-control" autocomplete="new-email" />
                            <span asp-validation-for="SEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CPassword" class="form-label"></label>
                            <input asp-for="CPassword" type="password" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="CPassword" class="text-danger"></span>
                        </div>

                            @Html.ValidationSummary(false, "", new { @class = "text-danger mb-3" })



                        <div class="d-grid mb-3">
                            <input type="submit" value="Register" class="btn btn-primary" />
                        </div>

                        <div class="text-center">
                            <a asp-action="Login">Already have an account? Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}